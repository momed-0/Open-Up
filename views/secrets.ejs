<%- include('partials/header') %>

<div class="container">
  <h1 class="logo"><i class="fas fa-pen-fancy"></i>Open Up</h1>
  <p class="page-description">Dive into the Depths: Share Your Hidden Stories, Emotions, and Confidences.</p>
  <hr>

    <div class="buttons-container">
      <a class="btn btn-light btn-lg" href="/logout" role="button">Log Out</a>
      <a class="btn btn-dark btn-lg" href="/compose" role="button">Submit a Secret</a>
    </div>

    <div class="posts-container">
      <% for(var i = posts.length - 1; i >= 0; i--) { %>
        <div class="post">
          <h2><%= posts[i].title %></h2>
          <p><%= posts[i].body %></p>
        </div>
      <% } %>
    </div>
  </div>
</div>


<%- include('partials/footer') %>
